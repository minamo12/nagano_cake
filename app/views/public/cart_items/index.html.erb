<h1>ショッピングカート</h1>

<h3>カートを空にする</h3>
<%= link_to "カートを空にする", cart_item_destroy_all_path, method: :delete %>

<table>

  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td>
        <div>
          <%= form_with model: @cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
             <%= f.select :amount, *[1..3], include_blank: "#{cart_item.amount}" %>
            <%= f.submit '変更' %>
          <% end %>
        </div>
      </td>
      <td><%= cart_item.subtotal %></td>
      <% @total += cart_item.subtotal %>
      <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>

</table>

<div>
  <label>合計金額</label>
  <%= @total %>
</div>

