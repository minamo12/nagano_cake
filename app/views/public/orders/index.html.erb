<h4>注文履歴一覧</h4>

<div class="width-100p">
<table>
  <thead>
    <tr>
      <th class="table-boder">注文日</th>
      <th class="table-boder width-40p">配送先</th>
      <th class="table-boder">注文商品</th>
      <th class="table-boder">支払金額</th>
      <th class="table-boder">ステータス</th>
      <th class="table-boder width-15p">注文詳細</th>
    </tr>
  </thead>

  <% @orders.each do |order| %>

  <tbody>
    <tr>
      <% if order.customer_id == current_customer.id %>
      <td class="table-boder"><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td class="table-boder">
        〒 <%= order.postal_code %><br>
        <%= order.address %><br>
        <%= order.name %>
      </td>
      <td class="table-boder">
        <% order.order_details.each do |order_detail| %>
        <%= order_detail.item.name %><br>
        <% @total += order_detail.subtotal %>
        <% end %>
      </td>
      <td class="table-boder"><%= @total.to_s(:delimited, delimiter: ",") %>円</td>
      <td class="table-boder"><%= order.status_i18n %></td>
      <td class="table-boder cell-center"><%= link_to "表示する", order_path(order.id), class: 'btn btn-primary' %></td>
      <% end %>
    </tr>
  </tbody>
  <% end %>

</table>

</div>