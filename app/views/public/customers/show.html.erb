
<div>

  <h4>マイページ</h4>

  <div class="width-100p">
    <div class="space_15 flex">
      <div class="big-font font_weight col-2">登録情報</div>
      <%= link_to "編集する", customers_infomation_edit_path, class: 'btn btn-success none-border' %>
    </div>

    <table class="space_30 width-60p">

      <tr>
        <th class="width-25p">氏名</th>
        <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>

      <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>

      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>

      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>

      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>

    </table>

    <div class="flex space_15">
      <div class="big-font font_weight col-2">配送先</div>
      <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary none-border' %>
    </div>

    <div class="flex">
      <div class="big-font font_weight col-2">注文履歴</div>
      <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary none-border' %>
    </div>

  </div>

</div>