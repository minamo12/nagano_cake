<h4>会員情報編集</h4>

<%= form_with model: @customer, url: customers_infomation_path do |f| %>

  <div class="field space_5">
    <label class="col-3">氏名</label>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'right-space' %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field space_5">
    <label class="col-3">フリガナ</label>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'right-space' %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field space_5">
    <label class="col-3">郵便番号</label>
    <%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field space_5">
    <label class="col-3">住所</label>
    <%= f.text_area :address, autofocus: true, autocomplete: "address", class: 'form-long' %>
  </div>

  <div class="field space_5">
    <label class="col-3">電話番号(ハイフンなし)</label>
    <%= f.number_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field space_15">
    <label class="col-3">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions flex">
    <div class="col-3"></div>
    <%= f.submit "編集内容を保存", class: 'btn btn-success col-3 none-border' %>
    <div class="col-2"></div>
    <%= link_to "退会する", customers_unsubscribe_path, class: 'btn btn-danger none-border' %>
  </div>
<% end %>

