<h1>会員情報編集</h1>

<%= form_with model: @customer, url: customers_infomation_path do |f| %>

  <div class="field">
    <label>氏名</label>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <label>フリガナ</label>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
 　　<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <label>郵便番号(ハイフンなし)</label>
    <%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <label>住所</label>
    <%= f.text_area :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <label>電話番号(ハイフンなし)</label>
    <%= f.number_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>

<h4>退会する</h4>
<%= link_to "退会する", customers_unsubscribe_path %>