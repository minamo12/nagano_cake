<h1>配送先編集</h1>

<%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>

<div class="field">
  <label>郵便番号(ハイフンなし)</label>
  <%= f.number_field :postal_code %>
</div>

<div class="field">
  <label>住所</label>
  <%= f.text_area :address %>
</div>

<div class="field">
  <label>宛名</label>
  <%= f.text_field :name %>
</div>

<div class="actions">
  <%= f.submit '変更内容を保存' %>
</div>

<% end %>