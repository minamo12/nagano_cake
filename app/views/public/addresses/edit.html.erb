<h1>配送先編集</h1>

<%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>

<div class="field">
  <label class="col-3">郵便番号(ハイフンなし)</label>
  <%= f.number_field :postal_code, class: 'col-3' %>
</div>

<div class="field">
  <label class="col-3">住所</label>
  <%= f.text_field :address, class: 'col-5' %>
</div>

<div class="field">
  <label class="col-3">宛名</label>
  <%= f.text_field :name, class: 'col-3' %>
  <label class="col-2"></label>
  <%= f.submit '変更内容を保存', class: 'btn btn-success none-border' %>
</div>

<% end %>