<h4>配送先登録/一覧</h4>

<%= form_with model: @address do |f| %>

<div class="space_60">

  <div class="field">
    <label class="col-3">郵便番号(ハイフンなし)</label>
    <%= f.number_field :postal_code, class: 'col-3', placeholder: "0000000" %>
  </div>

  <div class="field">
    <label class="col-3">住所</label>
    <%= f.text_field :address, class: 'col-5', placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <label class="col-3">宛名</label>
    <%= f.text_field :name, class: 'col-3', placeholder: "令和道子" %>
    <label class="col-2"></label>
    <%= f.submit '新規登録', class: 'btn btn-success none-border' %>
  </div>

</div>


<% end %>

<table class="width-70p">
  <thead>
    <tr>
      <th class="table-boder width-10p">郵便番号</th>
      <th class="table-boder width-40p">住所</th>
      <th class="table-boder width-15p">宛名</th>
      <th colspan="1" class="table-boder width-35p"></th>
    </tr>
  </thead>
  <% @addresses.each do |address| %>
  <tbody>
    <tr>
      <td class="table-boder"><%= address.postal_code %></td>
      <td class="table-boder"><%= address.address %></td>
      <td class="table-boder"><%= address.name %></td>
      <td class="table-boder cell-center">
        <%= link_to "編集する", edit_address_path(address.id), class: 'none-border btn btn-success' %>
        <%= link_to "削除する", address_path(address.id), method: :delete, class: 'none-border btn btn-danger' %></td>
    </tr>
  </tbody>
  <% end %>
</table>

