<h4>新規登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class="space_30">

  <table>
    <tr>
      <th class="col-3 no-deco no-table-border">名前</th>
      <td class="no-table-border">(性)</td>
      <td class="no-table-border"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %></td>
      <td class="no-table-border"><div class="left-space-30">(名)</div></td>
      <td class="no-table-border"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %></td>
    </tr>
    <tr>
      <th class="no-deco no-table-border">フリガナ</th>
      <td class="no-table-border">(セイ)</td>
      <td class="no-table-border"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ" %></td>
      <td class="no-table-border"><div class="left-space-30">(メイ)</div></td>
      <td class="no-table-border"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %></td>
    </tr>
    <tr>
      <th class="no-deco no-table-border">メールアドレス</th>
      <td class="no-table-border"></td>
      <td class="no-table-border"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@ example.com" %></td>
    </tr>
    <tr>
      <th class="no-deco no-table-border">郵便番号(ハイフンなし)</th>
      <td class="no-table-border"></td>
      <td class="no-table-border"><%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %></td>
    </tr>
    <tr>
      <th class="no-deco no-table-border">住所</th>
      <td class="no-table-border"></td>
      <td colspan="4" class="no-table-border"><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: 'width-100p' %></td>
    </tr>
    <tr>
      <th class="no-deco no-table-border">電話番号(ハイフンなし)</th>
      <td class="no-table-border"></td>
      <td class="no-table-border"><%= f.number_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "00000000000" %></td>
    </tr>
    <tr>
      <th class="no-deco no-table-border">パスワード(6文字以上)</th>
      <td class="no-table-border"></td>
      <td class="no-table-border"><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <th class="no-deco no-table-border">パスワード(確認用)</th>
      <td class="no-table-border"></td>
      <td class="no-table-border"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <th class="no-deco no-table-border"></th>
      <td class="no-table-border"></td>
      <td class="no-table-border"><%= f.submit "新規登録", class: 'width-90p btn btn-success' %></td>
    </tr>
  </table>

</div>
<% end %>


<%= render "public/shared/links" %>