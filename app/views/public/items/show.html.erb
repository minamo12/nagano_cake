
<div class="row">

  <div class="right-space-big"><%= image_tag @item.get_image(250,200) %></div>
  <div>
    <div class="item-name space_15"><%= @item.name %></div>
    <div class="space_60"><%= @item.introduction %></div>
    <div class="flex">
      <div class="space_30 font_weight big-font">￥<%= @item.with_tax_price %></div>(税込)
    </div>

    <div>
      <%= form_with model: @cart_item, url: cart_items_path(@cart_item.id), method: :post do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.select :amount, *[1..3], include_blank: '個数選択' %>
        <%= f.submit 'カートに入れる', class: 'btn btn-success left-space-50' %>
      <% end %>
    </div>

  </div>

</div>

