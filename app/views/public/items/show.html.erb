
<div class="row width-100p">

  <div class="right-space-big"><%= image_tag @item.get_image(250,200) %></div>

  <div class="width-70p">
    <div class="item-name space_15"><%= @item.name %></div>
    <div class="space_60"><%= @item.introduction %></div>
    <div class="flex space_30">
      <div class="font_weight big-font">￥<%= @item.with_tax_price.to_s(:delimited, delimiter: ",") %></div>
      <span class="bottom-send">&nbsp;(税込)</span>
    </div>

    <div>
      <%= form_with model: @cart_item, url: cart_items_path(@cart_item.id), method: :post do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <div class="flex width-100p">
          <div class="width-20p"><%= f.select :amount, *[1..3], include_blank: '個数選択' %></div>
          <div><%= f.submit 'カートに入れる', class: 'btn btn-success left-space-50' %></div>
        </div>
      <% end %>
    </div>

  </div>

</div>

