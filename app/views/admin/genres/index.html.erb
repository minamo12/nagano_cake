<h1>ジャンル一覧・追加</h1>

<div>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="field">
    <label>ジャンル名</label>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit '新規登録' %>
  </div>
  <% end %>
</div>

<div>
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <% @genres.each do |genre| %>
    <tbody>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>