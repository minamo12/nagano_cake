<h4>ジャンル編集</h4>

<div class="row">
  <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
    <label class="col-3">ジャンル名</label>
    <%= f.text_field :name, placeholder: "ジャンル名", class: 'col-4 right-space-big' %>
    <%= f.submit "変更を保存", class: 'btn btn-success none-border col-3' %>
  <% end %>
</div>