<h1><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h1>


<%= form_with model: @customer, url: admin_customers_path(@customer.id), method: :patch do |f| %>

<div>
  <label>会員ID</label>
  <%= @customer.id %>
</div>

<div>
  <label>氏名</label>
  <%= f.text_field :first_name %> <%= f.text_field :last_name %>
</div>

<div>
  <label>フリガナ</label>
  <%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %>
</div>

<div>
  <label>郵便番号</label>
  <%= f.number_field :postal_code %>
</div>

<div>
  <label>住所</label>
  <%= f.text_area :address %>
</div>

<div>
  <label>電話番号</label>
  <%= f.number_field :telephone_number %>
</div>

<div>
  <label>メールアドレス</label>
  <%= f.text_field :email %>
</div>

<div>
  <label>ステータス</label>
</div>

<div>
  <%= f.submit '変更を保存' %>
</div>

<% end %>