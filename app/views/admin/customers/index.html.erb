

<h4>会員一覧</h4>

<div class="flex">

  <table class="top-bottom-border center space_15">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <% @customers.each do |customer| %>
    <tbody>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to(admin_customer_path(customer.id), class: 'black-link') do %>
            <%= customer.first_name %>
            <%= customer.last_name %>
          <% end %>
          </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_active %>
            <div class="true">有効</div>
          <% else %>
            <div class="false">退会</div>
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>

  <div class="text-center">
    <div class="page">
      <%= paginate @customers %>
    </div>
  </div>

</div>