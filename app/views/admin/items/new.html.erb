<h4>商品新規登録</h4>



<%= form_with model: @item, url: admin_items_path do |f| %>

<div class="width-100 center">

  <div class="row space_15">
    <label class="col-2">商品画像</label>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="row space_15">
    <label class="col-2">商品名</label>
    <%= f.text_field :name, placeholder: "商品名", class: 'col-4' %>
  </div>

  <div class="row space_15 form-big">
    <label class="col-2">商品説明</label>
    <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: 'col-4' %>
  </div>

  <div class="row space_15">
    <label class="col-2">ジャンル</label>
    <%= f.collection_select :genre_id, Genre.all, :id, :name,  class: 'col-4', include_blank: "--選択してください--" %>
  </div>

  <div class="row space_15">
    <label class="col-2">税抜価格</label>
    <%= f.number_field :price, placeholder: "1000", class: 'col-4' %>円
  </div>

  <div class="row space_30">
    <label class="col-2">販売ステータス</label>
    <div class="right-space">
      <%= f.radio_button :is_active, true %>
      <label>販売中</label>
    </div>
    <div>
      <%= f.radio_button :is_active, false %>
      <label>販売停止中</label>
    </div>
  </div>

  <div class="text-center">
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  </div>

</div>


<% end %>
