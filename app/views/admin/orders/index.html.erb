<h1>注文履歴</h1>




<div>
  <table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order.id) %></td>
        <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
        <% @amount = @total_amount.find_by(order_id: order.id) %>
        <td><%= @amount.sum_amount %></td>
        <td><%= order.status %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>

<br>


